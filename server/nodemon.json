{
    "restartable": "rs",
    "ignore": ["node_modules/**/node_modules"],
    "verbose": true,
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "watch": ["src/**/*.ts"],
    "env": {
      "NODE_ENV": "development",
      "TS_NODE_PROJECT": "./tsconfig.json"
    },
    "ext": "js,json,ts,.env"
}